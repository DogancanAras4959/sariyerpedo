@model IEnumerable<sariyerpedo.BUSSINES.DTOS.SliderData.SliderDto>

@{
    ViewData["Title"] = "Sliderlar";
    Layout = "~/Areas/admin/Views/_Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Başlık</th>
                                <th>Url</th>
                                <th>Oluşturulma</th>
                                <th>Güncelleme</th>
                                <th>Durum</th>
                                <th>İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@item.title</td>
                                    <td>@item.UrlTitle</td>
                                    <td>@item.CreatedTime.ToString("MM/dd/yyyy HH:mm")</td>
                                    <td>@item.UpdatedTime.ToString("MM/dd/yyyy HH:mm")</td>
                                    @if (item.IsActive == true)
                                    {
                                        <td>Aktif</td>
                                    }
                                    else
                                    {
                                        <td>Pasif</td>
                                    }
                                    <td>
                                        <a class="btn btn-outline-secondary btn-sm edit" title="Düzenle" href="/admin/slider/sliderduzenle?Id=@item.Id">
                                            <i class="fas fa-pencil-alt" title="Edit"></i>
                                        </a>
                                        <a class="btn btn-outline-secondary btn-sm deleted" title="Sil" href="/admin/slider/slidersil?Id=@item.Id">
                                            <i class="fas fa-trash" title="Delete"></i>
                                        </a>
                                        <a class="btn btn-outline-secondary btn-sm above" title="Aktif/Pasif" href="/admin/slider/sliderdurumduzenle?Id=@item.Id">
                                            <i class="fas fa-wifi" title="Aktif/Pasif"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

