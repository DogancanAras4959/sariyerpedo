@using System.Security.Claims

@{
    var isAuthenticated = User.Identity.IsAuthenticated;
}

<!DOCTYPE html>
<html lang="en">

<head>

    @if (isAuthenticated)
    {
        @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_title_meta.cshtml")
        @RenderSection("styles", false)
    }

    @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_head_css.cshtml")

</head>

<body data-sidebar="dark">

    <!-- Begin page -->
    <div id="layout-wrapper">

        @if (isAuthenticated)
        {
            @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_topbar.cshtml")
            @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_sidebar.cshtml")

            <div class="main-content" style="margin-left:240px; margin-right:0px;">
                <div class="page-content">
                    <div class="container-fluid">

                        @*@await Html.PartialAsync("~/Areas/admin/Views/_Shared/_page_title.cshtml")*@

                        @RenderBody()

                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_footer.cshtml")

            </div>
        }
        else
        {
            <div class="main-content" style="margin-right:0px;">
                <div class="page-content" style="padding:0px;">
                    <div class="container-fluid">

                        @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_page_title.cshtml")

                        @RenderBody()

                    </div> <!-- container-fluid -->
                </div>

                @if (isAuthenticated)
                {
                    @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_footer.cshtml")
                }

            </div>
        }

    </div>

    @RenderSection("externalhtml", required: false)

    @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_right_sidebar.cshtml")

    @await Html.PartialAsync("~/Areas/admin/Views/_Shared/_vendor_scripts.cshtml")

    @RenderSection("scripts", required: false)


</body>

</html>