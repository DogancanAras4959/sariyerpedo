@model sariyerpedo.Areas.admin.Models.LoginViewModel
@using System.Security.Claims

@{
    var isAuthenticated = User.Identity.IsAuthenticated;
}

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "~/Areas/admin/Views/_Shared/_Layout.cshtml";
}

<style>
    .form-check {
        position: relative;
        text-align: left;
    }

    .form-check {
        display: block;
        min-height: 1.35rem;
        padding-left: 1.5em;
        margin-bottom: 0.125rem;
    }

        .form-check .form-check-input {
            float: left;
            margin-left: -1.5rem;
        }
</style>

@if (!isAuthenticated)
{<div>
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-lg-12">
                    <div class="authentication-page-content d-flex align-items-center min-vh-100" style="height: 75vh; min-height: 75vh !important; ">
                        <div class="w-100">
                            <div class="row justify-content-center">
                                <div class="col-lg-4">
                                    <div style=" background: #fff; padding: 30px;">
                                        <div class="text-center">
                                            <h4 class="font-size-18">Hoşgeldiniz!</h4>
                                            <p class="text-muted">Editöre Giriş Yapın</p>
                                        </div>

                                        <div class="p-2 mt-3">
                                            <form class="" method="post" action="/admin/editor/loginToEditor">

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-user-2-line auti-custom-input-icon"></i>
                                                    <label for="username">Username</label>
                                                    <input type="text" class="form-control" asp-for="UserName" id="username" placeholder="Kullanıcı Adınızı Girin">
                                                </div>

                                                <div class="mb-3 auth-form-group-custom mb-4">
                                                    <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                                    <label for="userpassword">Password</label>
                                                    <input type="password" class="form-control" asp-for="Password" id="userpassword" placeholder="Şifrenizi Girin">
                                                </div>

                                                <div class="form-check">
                                                    <input type="checkbox" asp-for="isRemember" class="form-check-input" id="customControlInline">
                                                    <label class="form-check-label" for="customControlInline">Beni Hatırla</label>
                                                </div>

                                                <div class="mt-4 text-center">
                                                    <button style="width:100%;" class="btn btn-primary w-md waves-effect btn-block waves-light" type="submit">Giriş Yap</button>
                                                </div>

                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



